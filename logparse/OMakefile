# Use the byte-code compiler
BYTE_ENABLED = true
NATIVE_ENABLED = false
OCAMLCFLAGS += -g -thread

USE_OCAMLFIND = true
OCAMLPACKS[] = extlib batteries

FILES = coq_min_imports dirtools

.PHONY: clean distclean run

clean:
	rm -f *.cmo *.cmi coq_min_imports *.run

run: coq_min_imports
	./coq_min_imports -cmi-verbose -q Test.v

#Build the program
OCamlProgram(coq_min_imports, $(FILES))
.DEFAULT: coq_min_imports

