# Use the byte-code compiler
BYTE_ENABLED = true
NATIVE_ENABLED = false
OCAMLCFLAGS += -g -thread -annot

USE_OCAMLFIND = true
OCAMLPACKS[] = extlib batteries

FILES = parselog

.PHONY: clean distclean run run1

clean:
	rm -f *.cmo *.cmi parselog *.run *.dot *.pdf

refine.dot: parselog OMakefile
	./parselog -d -f ../refine.txt.out -o refine.dot

refine.pdf: refine.dot OMakefile
	neato -Tpdf refine.dot -orefine.pdf

refine_fail.dot: parselog OMakefile
	./parselog -d -f ../refine_fail.txt.out -o refine_fail.dot

refine_fail.pdf: refine_fail.dot OMakefile
	neato -Tpdf refine_fail.dot -orefine_fail.pdf

# helpers
run: refine.pdf
	xdg-open refine.pdf

run1: refine_fail.pdf
	xdg-open refine_fail.pdf


#Build the program
OCamlProgram(parselog, $(FILES))
.DEFAULT: parselog

